# ClickHouse Sink Configuration for Sample Environment
TOPIC_PREFIX=your_topic_prefix

# ClickHouse Connection
CLICKHOUSE_HOSTNAME=your-clickhouse-cluster.aivencloud.com
CLICKHOUSE_PORT=25650
CLICKHOUSE_HTTP_PORT=25651
CLICKHOUSE_USER=avnadmin
CLICKHOUSE_DATABASE=your_database

# Schema Registry (from flink-studio config)
SCHEMA_REGISTRY_URL=https://your-kafka-cluster.aivencloud.com:25655

# Kafka Connect API URL
CP_CONNECT_URL=http://cp-connect.kafka.api.your-environment

# Credentials (fetch from K8s secrets or set directly)
# kubectl get secret clickhouse-admin -n kafka -o jsonpath='{.data.password}' | base64 --decode
CLICKHOUSE_ADMIN_PASSWORD=

# kubectl get secret aiven-credentials -n kafka -o jsonpath='{.data.userinfo}' | base64 --decode
SCHEMA_REGISTRY_AUTH=

# kubectl get secret aiven-credentials -n kafka -o jsonpath='{.data.username}' | base64 --decode
CLUSTER_USER_NAME=

# kubectl get secret aiven-credentials -n kafka -o jsonpath='{.data.password}' | base64 --decode
CLUSTER_PASSWORD=

# kubectl get secret kafka-truststore-secret -n kafka -o jsonpath='{.data.truststore-password}' | base64 --decode
AIVEN_TRUSTSTORE=