# Multi-Sink Configuration for Sample Environment
# Supports ClickHouse and StarRocks sink connectors

# Kafka Connect API URL (manager.js connects to this to configure connectors)
CP_CONNECT_URL=http://cp-connect.kafka.api.your-environment

# Connector Configuration (these are used to configure the connector itself)
TOPIC_PREFIX=your_topic_prefix

# ===================================
# ClickHouse Connection
# ===================================
CLICKHOUSE_HOSTNAME=your-clickhouse-cluster.aivencloud.com
CLICKHOUSE_HTTP_PORT=25651
CLICKHOUSE_USER=avnadmin
CLICKHOUSE_DATABASE=your_database

# Schema Registry
SCHEMA_REGISTRY_URL=https://your-kafka-cluster.aivencloud.com:25655

# Credentials (fetch from K8s secrets or set directly)
# kubectl get secret clickhouse-admin -n kafka -o jsonpath='{.data.password}' | base64 --decode
CLICKHOUSE_ADMIN_PASSWORD=

# ===================================
# StarRocks Connection (NEW)
# ===================================
# StarRocks Frontend (FE) node
STARROCKS_FE_HOST=your-starrocks-fe.example.com
STARROCKS_HTTP_PORT=8030
STARROCKS_QUERY_PORT=9030
STARROCKS_USER=root
STARROCKS_DATABASE=your_database

# kubectl get secret starrocks-admin -n kafka -o jsonpath='{.data.password}' | base64 --decode
STARROCKS_PASSWORD=

# StarRocks Backend (BE) node - for Stream Load data ingestion
# NOTE: Do NOT include http:// prefix
STARROCKS_BE_HOST=starrocks-be.example.com
STARROCKS_BE_PORT=8040

# Alternatively, use full URLs (optional - will override host:port if set)
# STARROCKS_HTTP_URL=http://your-starrocks-fe.example.com:8030
# STARROCKS_QUERY_URL=your-starrocks-fe.example.com:9030

# ===================================
# Kafka Schema Registry (Shared)
# ===================================
SCHEMA_REGISTRY_URL=https://your-kafka-cluster.aivencloud.com:25655

# kubectl get secret aiven-credentials -n kafka -o jsonpath='{.data.userinfo}' | base64 --decode
SCHEMA_REGISTRY_AUTH=

# ===================================
# Kafka Cluster Credentials (Shared)
# ===================================
# kubectl get secret aiven-credentials -n kafka -o jsonpath='{.data.username}' | base64 --decode
CLUSTER_USER_NAME=

# kubectl get secret aiven-credentials -n kafka -o jsonpath='{.data.password}' | base64 --decode
CLUSTER_PASSWORD=

# kubectl get secret kafka-truststore-secret -n kafka -o jsonpath='{.data.truststore-password}' | base64 --decode
AIVEN_TRUSTSTORE_PASSWORD=