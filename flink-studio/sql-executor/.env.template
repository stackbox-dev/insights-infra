# Flink SQL Executor Environment Configuration Template
# Copy this file to create environment-specific configurations:
#   cp .env.template .my-environment.env
#
# Then fill in your environment-specific values and use with:
#   python flink_sql_executor.py --env-file .my-environment.env --sql-file my-query.sql

# ==============================================================================
# Kafka Configuration
# ==============================================================================
# Environment name used as topic prefix (e.g., sbx_uat, samadhan_prod)
KAFKA_ENV="your_environment"

# Kafka broker addresses
KAFKA_BOOTSTRAP_SERVERS="your-kafka-server:port"

# Schema Registry URL for Avro schemas
SCHEMA_REGISTRY_URL="https://your-schema-registry:port"

# Kafka authentication credentials
KAFKA_USERNAME="your-username"
KAFKA_PASSWORD="your-password"

# JKS truststore password for SSL/TLS connections
TRUSTSTORE_PASSWORD="your-truststore-password"

# ==============================================================================
# Flink SQL Gateway Configuration
# ==============================================================================
# URL of the Flink SQL Gateway REST API
# For Kubernetes: http://flink-sql-gateway.flink-studio.svc.cluster.local
# For local: http://localhost:8083
SQL_GATEWAY_URL="http://flink-sql-gateway.flink-studio.svc.cluster.local"

# Session timeout in seconds (default: 300)
SQL_GATEWAY_SESSION_TIMEOUT="300"

# Interval in seconds between status polls (default: 2)
SQL_GATEWAY_POLL_INTERVAL="2"

# Maximum time in seconds to wait for operation completion (default: 60)
SQL_GATEWAY_MAX_WAIT_TIME="60"

# ==============================================================================
# Flink REST API Configuration
# ==============================================================================
# URL of the Flink JobManager REST API for job management operations
# For Kubernetes: http://flink-session-cluster.flink-studio.svc.cluster.local
# For local: http://localhost:8081
FLINK_REST_URL="http://flink-session-cluster.flink-studio.svc.cluster.local"

# ==============================================================================
# Job Management Configuration
# ==============================================================================
# Enable SQLite database for tracking job operations (true/false)
JOB_MANAGEMENT_ENABLE_DATABASE="true"

# Path to SQLite database file
JOB_MANAGEMENT_DATABASE_PATH="flink_jobs.db"

# ==============================================================================
# Logging Configuration
# ==============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL="INFO"

# Log message format
LOG_FORMAT="%(asctime)s - %(levelname)s - %(message)s"

# Optional: Log to file (leave empty for console only)
# LOG_FILE="flink_executor.log"

# ==============================================================================
# Execution Configuration
# ==============================================================================
# Continue executing statements even if errors occur (true/false)
CONTINUE_ON_ERROR="false"

# ==============================================================================
# Connection Configuration
# ==============================================================================
# HTTP request timeout in seconds
CONNECTION_TIMEOUT="30"

# Number of retries for failed requests
CONNECTION_RETRY_COUNT="3"

# Delay in seconds between retries
CONNECTION_RETRY_DELAY="5"
