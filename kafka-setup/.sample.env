KAFKA_BOOTSTRAP_SERVERS=your-kafka-cluster.aivencloud.com:22167
KAFKA_REST_URL=https://your-kafka-cluster.aivencloud.com:22158
SCHEMA_REGISTRY_URL=https://your-kafka-cluster.aivencloud.com:22159