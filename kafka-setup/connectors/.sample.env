# Sample Environment Configuration File
# Copy this file to <environment>.env (e.g., staging.env, production.env) and update values

# ====================
# Kubernetes Configuration
# ====================
K8S_NAMESPACE=kafka
K8S_CONNECT_LABEL=app=cp-connect

# ====================
# Kafka/Aiven Endpoints
# ====================
KAFKA_BOOTSTRAP_SERVERS=your-kafka-cluster.aivencloud.com:22167
KAFKA_REST_URL=https://your-kafka-cluster.aivencloud.com:22158
SCHEMA_REGISTRY_URL=https://your-kafka-cluster.aivencloud.com:22159

# ====================
# Kubernetes Secrets
# ====================
# Secret containing Aiven credentials (username, password, userinfo)
K8S_AIVEN_SECRET=aiven-credentials

# ====================
# Kafka Connect Configuration
# ====================
CONNECT_REST_URL=http://localhost:8083
CONNECT_LOCAL_PORT=8083
CONNECT_REMOTE_PORT=8083

# ====================
# Connector Names
# ====================
WMS_CONNECTOR_NAME=source-env-wms
ENCARTA_CONNECTOR_NAME=source-env-encarta
BACKBONE_CONNECTOR_NAME=source-env-backbone

# ====================
# Kafka Topic Configuration
# ====================
# Topic Prefixes
WMS_TOPIC_PREFIX=env.wms
ENCARTA_TOPIC_PREFIX=env.encarta
BACKBONE_TOPIC_PREFIX=env.backbone

# Signal Topics
WMS_SIGNAL_TOPIC=debezium-signals-wms
WMS_SIGNAL_CONSUMER_GROUP=debezium-signals-consumer-wms

ENCARTA_SIGNAL_TOPIC=debezium-signals-encarta
ENCARTA_SIGNAL_CONSUMER_GROUP=debezium-signals-consumer-encarta

BACKBONE_SIGNAL_TOPIC=debezium-signals-backbone
BACKBONE_SIGNAL_CONSUMER_GROUP=debezium-signals-consumer-backbone

# Schema history topic
SCHEMA_HISTORY_TOPIC=schema-changes.postgres

# ====================
# WMS Database Configuration
# ====================
WMS_DB_HOSTNAME=10.0.0.1
WMS_DB_PORT=5432
WMS_DB_USER=debezium
WMS_DB_NAME=postgres
WMS_DB_PASSWORD_SECRET=wms-db-password
WMS_PUBLICATION_NAME=dbz_publication
WMS_SLOT_NAME=wms_dbz_slot
WMS_TABLE_INCLUDE_LIST="public.inventory,public.task,public.storage_position"

# ====================
# Encarta Database Configuration
# ====================
ENCARTA_DB_HOSTNAME=10.0.0.2
ENCARTA_DB_PORT=5432
ENCARTA_DB_USER=debezium
ENCARTA_DB_NAME=encarta
ENCARTA_DB_PASSWORD_SECRET=encarta-db-password
ENCARTA_PUBLICATION_NAME=dbz_publication
ENCARTA_SLOT_NAME=encarta_dbz_slot
ENCARTA_TABLE_INCLUDE_LIST="public.skus,public.uoms,public.products"

# ====================
# Backbone Database Configuration
# ====================
BACKBONE_DB_HOSTNAME=10.0.0.3
BACKBONE_DB_PORT=5432
BACKBONE_DB_USER=debezium
BACKBONE_DB_NAME=backbone
BACKBONE_DB_PASSWORD_SECRET=backbone-db-password
BACKBONE_PUBLICATION_NAME=dbz_publication
BACKBONE_SLOT_NAME=backbone_dbz_slot
BACKBONE_TABLE_INCLUDE_LIST="public.node,public.node_closure"

# ====================
# Debezium Configuration
# ====================
# Snapshot settings
SNAPSHOT_MODE=initial
SNAPSHOT_LOCKING_MODE=shared
INCREMENTAL_SNAPSHOT_ENABLED=true

# Producer settings
PRODUCER_COMPRESSION_TYPE=lz4
PRODUCER_MAX_REQUEST_SIZE=1048576
PRODUCER_BUFFER_MEMORY=33554432

# Topic creation defaults
TOPIC_CREATION_DEFAULT_REPLICATION_FACTOR=3
TOPIC_CREATION_DEFAULT_PARTITIONS=1
TOPIC_CREATION_DEFAULT_CLEANUP_POLICY=compact
TOPIC_CREATION_DEFAULT_RETENTION_MS=-1
TOPIC_CREATION_DEFAULT_COMPRESSION_TYPE=lz4